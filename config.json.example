{
  "server": {
    "port": 11435,
    "host": "localhost"
  },
  "providers": {
    "ollama": {
      "type": "ollama",
      "url": "http://localhost:11434",
      "models": []
    },
    "zen": {
      "type": "opencodezen",
      "url": "https://api.opencode.ai/v1",
      "apiKey": "${OPENCODE_API_KEY}",
