{
  "$schema": "https://raw.githubusercontent.com/macedot/openmodel/master/config.schema.json",
  "server": {
    "port": 11435,
    "host": "localhost"
  },
  "backends": {
    "local": {
      "url": "http://localhost:11434/v1",
      "apiKey": ""
    },
    "openai": {
      "url": "https://api.openai.com/v1",
      "apiKey": "${OPENAI_API_KEY}"
    }
  },
  "models": {
    "gpt-4": [
      { "backend": "openai", "model": "gpt-4" }
    ],
    "gpt-3.5": [
      { "backend": "openai", "model": "gpt-3.5-turbo" }
    ],
    "llama2": [
      { "backend": "local", "model": "llama2" }
    ]
  },
  "thresholds": {
    "failures_before_switch": 3,
    "initial_timeout_ms": 10000,
    "max_timeout_ms": 300000
  },
  "log_level": "info",
  "log_format": "text"
}
